{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./lib",
    "target": "esnext",
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "baseUrl": "./",
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "exclude": [
    "node_modules",
    "src/**/*.test.ts",
    "vitest.config.ts",
    "**/*.stories.tsx"
  ]
}
