{
  "compilerOptions": {
    "outDir": "./lib",
    "rootDir": "src",
    "strict": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "composite": true,
    "isolatedModules": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.test.*",
    "vitest.config.ts",
    "src/app.tsx",
    "src/entry-client.tsx",
    "src/entry-server.tsx",
    "src/global.d.ts",
    "src/routes/*.*"
  ]
}
