{
  "compilerOptions": {
    "outDir": "./lib",
    "rootDir": "src",
    "strict": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "composite": true,
    "isolatedModules": false,
    "declaration": true,
  },
  "exclude": [
    "node_modules",
    "src/**/*.test.ts",
    "vitest.config.ts",
  ]
}
